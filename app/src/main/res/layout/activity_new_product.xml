<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorToolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductNewActivity">

    <TextView
        android:id="@+id/new_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/rubik_light"
        android:text="New Product"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_new_product_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:hint="Name"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/TextInputLayoutAppearance"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/colorWhite"
        app:boxStrokeErrorColor="@color/colorWhite"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorWhite"
        app:errorEnabled="true"
        app:errorIconTint="@color/colorWhite"
        app:errorTextAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:errorTextColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_product"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_new_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textColorLink="@color/colorWhite" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/brand_new_product_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:hint="Brand"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/colorWhite"
        app:boxStrokeErrorColor="@color/colorWhite"
        app:endIconTint="@color/colorWhite"
        app:errorEnabled="true"
        app:errorTextColor="@color/colorWhite"
        app:errorTextAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_new_product_layout"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textview.MaterialAutoCompleteTextView
            android:id="@+id/brand_new_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="false"
            android:inputType="textNoSuggestions"
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textColorLink="@color/colorWhite" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/category_product_new_product_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:hint="Category"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/colorWhite"
        app:boxStrokeErrorColor="@color/colorWhite"
        app:endIconTint="@color/colorWhite"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brand_new_product_layout"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textview.MaterialAutoCompleteTextView
            android:id="@+id/category_product_new_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="false"
            android:inputType="textNoSuggestions"
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textColorLink="@color/colorWhite"/>


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/barcode_new_product_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:hint="Barcode"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/TextInputLayoutAppearance"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/colorWhite"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_product_new_product_layout"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/barcode_new_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            app:boxStrokeErrorColor="@color/colorWhite"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            tools:layout_editor_absoluteX="113dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/add_new_product"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:backgroundTint="@color/colorWhite"
        android:clickable="true"
        android:elevation="0dp"
        android:gravity="center"
        android:text="Add Product"
        android:tint="@color/colorWhite"
        app:borderWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_new_product_layout"
        app:rippleColor="@color/colorGreyDark"
        app:strokeColor="@color/colorWhite"
        app:strokeWidth="4dp" />

    <TextView
        android:id="@+id/errorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@+id/name_new_product_layout"
        app:layout_constraintTop_toBottomOf="@+id/name_new_product_layout" />

    <TextView
        android:id="@+id/errorbrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorWhite"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/brand_new_product_layout"
        app:layout_constraintTop_toBottomOf="@+id/brand_new_product_layout" />

    <TextView
        android:id="@+id/errorcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorWhite"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/category_product_new_product_layout"
        app:layout_constraintTop_toBottomOf="@+id/category_product_new_product_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>